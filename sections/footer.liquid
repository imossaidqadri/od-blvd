<footer class="footer group flex justify-between gap-[10px] p-5 items-center md:grid md:grid-cols-12">
  <a href="{{ routes.root_url }}" class="footer__link footer__link--copyright md:col-span-7 block uppercase">
    &copy; {{ 'now' | date: '%Y' }} {{ settings.brand_name }}
  </a>

  <div class="footer__social hidden md:flex md:col-span-2 gap-4 items-center">
    {% if section.settings.instagram_url != blank %}
      <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="footer__link footer__social-link" aria-label="Instagram">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
      </a>
    {% endif %}
    {% if section.settings.facebook_url != blank %}
      <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="footer__link footer__social-link" aria-label="Facebook">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
      </a>
    {% endif %}
    {% if section.settings.twitter_url != blank %}
      <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" class="footer__link footer__social-link" aria-label="Twitter">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
      </a>
    {% endif %}
  </div>

  <a href="{{ section.settings.terms_url | default: '/pages/terms' }}" class="footer__link footer__link--nav hidden md:block md:col-span-2">
    Terms
  </a>

  <a href="{{ section.settings.privacy_url | default: '/pages/privacy' }}" class="footer__link footer__link--nav hidden md:block md:col-span-1">
    Privacy
  </a>
</footer>

{% stylesheet %}
  .footer {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-foreground, #000000);
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .footer__link {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.1s ease;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer__social-link svg {
    width: 1rem;
    height: 1rem;
  }

  .group:hover .footer__link {
    opacity: 0.5;
  }

  .group:hover .footer__social {
    opacity: 0.5;
  }

  .footer__link:hover {
    opacity: 1;
  }

  .footer__social:hover {
    opacity: 1;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "header",
      "content": "t:general.social_media"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "t:labels.instagram_url"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "t:labels.facebook_url"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "t:labels.twitter_url"
    },
    {
      "type": "header",
      "content": "Footer Links"
    },
    {
      "type": "url",
      "id": "terms_url",
      "label": "Terms URL",
      "info": "Defaults to /pages/terms if not set"
    },
    {
      "type": "url",
      "id": "privacy_url",
      "label": "Privacy URL",
      "info": "Defaults to /pages/privacy if not set"
    }
  ]
}
{% endschema %}
